<!-- Navbar -->
<div class="header-content-box header-size-lg c-bg-grey-1">
    <div class="container top-header hidden-xs">
        <a href="http://leasing.imcc.ir" target="_blank">
            Login
        </a>
    </div>
</div>

<nav class="navbar navbar-transparent navbar-fixed-top navbar-color-on-scroll">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-index">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="index.html">
                <div class="logo-container">
                    <div class="logo">
                        <img src="/themes/custome/imcc/img/logo.png" alt="IMCC Logo">
                    </div>
                </div>
            </a>
        </div>

        <img src="/themes/custome/imcc/img/HeaderIcon.png" alt="IMCC Header icon" class="HeaderIcon">



        <div class="collapse navbar-collapse" id="navigation-index">

            {% import _self as menus %}


            {{ menus.menu_links(items, attributes, 0) }}

            {% macro menu_links(items, attributes, menu_level) %}
            {% import _self as menus %}
            {% if items %}
            {% if menu_level == 0 %}
                {% set foo=1 %}
                 <ul{{ attributes.addClass('nav','navbar-nav','navbar-right') }}>
            {% else %}
                {% set foo=2 %}
                <ul class="dropdown-menu dropdown-menu-right" >
             {% endif %}

                    {% for item in items %}

                        {% if foo == 2 %}
                            <li{{ item.attributes }}>
                        {% else %}
                            <li class="dropdown">
                        {% endif %}

                                {% if foo == 2  %}
                                    {{ link(item.title, item.url , item.attributes.addClass('navigation_font','class-foo-2')) }}
                                {% else %}
                                    {% if item.below   %}
                                        <a href="{{ item.url }}" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">{{ item.title }} <b class="caret"></b>
                                            <div class="ripple-container"></div>
                                        </a>
                                    {% else %}
                                        {{ link(item.title, item.url , item.attributes.addClass('navigation_font')) }}
                                    {% endif %}
                                {% endif %}


                            {% if item.below %}
                                {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
                {% endif %}
                {% endmacro %}

        </div>
    </div>
</nav>

